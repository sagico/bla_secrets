{
  "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/master/Schemata/sarif-schema-2.1.0.json",
  "version": "2.1.0",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "Test Shift-Left Security",
          "version": "TestScanCli/testing",
          "rules": [
            {
              "id": "pem_file",
              "name": "PEM File",
              "shortDescription": {
                "text": "PEM File"
              },
              "fullDescription": {
                "text": "Most CAs (Certificate Authority) provide certificates in PEM format in Base64 ASCII encoded files. The .pem file can include the server certificate, the intermediate certificate and the private key in a single file."
              },
              "defaultConfiguration": {
                "level": "error"
              },
              "properties": {
                "security-severity": "7.0"
              }
            },
            {
              "id": "aws_access_key_id",
              "name": "AWS Access Key ID",
              "shortDescription": {
                "text": "AWS Access Key ID"
              },
              "fullDescription": {
                "text": "Access keys are long-term credentials for an IAM user or the AWS account root user. You can use access keys to sign programmatic requests to the AWS CLI or AWS API (directly or using the AWS SDK)."
              },
              "defaultConfiguration": {
                "level": "error"
              },
              "properties": {
                "security-severity": "7.0"
              }
            }
          ]
        }
      },
      "results": [
        {
          "ruleId": "aws_access_key_id",
          "ruleIndex": 1,
          "kind": "fail",
          "properties": {
            "revisionId":"ec16125"
          },
          "message": {
            "text": "Details:\nAWS Access Key ID secret was found\n\nRecommendation:Ö¿\nTake immediate action to mitigate the risk of the identified hard-coded secret by locating where it is used, revoking it, and ensuring it is update in all dependent systems."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "/bla.txt"
                },
                "region": {
                  "startLine": 3
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
